rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /chatroom/{document} {
      allow read: if true;
      allow write: if false;
    }
    match /chatroom/room1/messages/{document} {
      allow read:  if true;
      allow write: if request.auth.uid != null;
    }
    match /chatroom/room2/messages/{document} {
      allow read:  if true;
      allow write: if request.auth.uid != null;
    }
    match /chatroom/room3/messages/{document} {
      allow read:  if true;
      allow write: if true;
    }
    match /count/room1/{document} {
      allow read:  if true;
      allow write: if true;
    }
    match /count/room2/{document} {
      allow read:  if true;
      allow write: if true;
    }
    match /count/room3/{document} {
      allow read:  if true;
      allow write: if true;
    }
  }
}
